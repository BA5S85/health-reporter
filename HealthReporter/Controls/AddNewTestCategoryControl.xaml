<UserControl x:Class="HealthReporter.Controls.AddNewTestCategoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthReporter.Controls"
             mc:Ignorable="d" Height="150" Width="300">
    <Border BorderBrush="Black" BorderThickness="2">
        <Grid>
            <TextBlock x:Name="nameLabel" HorizontalAlignment="Left" Margin="33,18,0,0" TextWrapping="Wrap" Text="name" VerticalAlignment="Top"/>
            <TextBox x:Name="name" HorizontalAlignment="Left" Height="23" Margin="105,18,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
            <TextBlock x:Name="parentLabel" HorizontalAlignment="Left" Margin="33,58,0,0" TextWrapping="Wrap" Text="parent" VerticalAlignment="Top"/>
            <ComboBox x:Name="parentSelector" DisplayMemberPath="name" SelectedValuePath="id" HorizontalAlignment="Left" Margin="105,58,0,0" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="createCategory" Content="Create" HorizontalAlignment="Left" Margin="202,104,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.329,-0.053" Click="btn_CreateNewTestCategory"/>
            <Button x:Name="back" Content="back" HorizontalAlignment="Left" Margin="105,104,0,0" VerticalAlignment="Top" Width="75" Click="btn_Back"/>
        </Grid>
    </Border>
</UserControl>
