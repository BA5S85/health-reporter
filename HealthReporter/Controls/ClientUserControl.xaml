<UserControl x:Class="HealthReporter.Controls.ClientUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthReporter.Controls"
             mc:Ignorable="d" Height="350" Width="600">
    <Border BorderBrush="Black" BorderThickness="2">
        <Grid>
            <Button x:Name="button1" Content="Add new client" HorizontalAlignment="Left" Margin="465,10,0,0" VerticalAlignment="Top" Width="98" Click="btn_AddNewClient" />
            <DataGrid AutoGenerateColumns="False" x:Name="dataGrid" HorizontalAlignment="Left" Margin="34,71,0,0" VerticalAlignment="Top" Height="243" Width="543">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="id" Visibility="Hidden" Binding="{Binding id}" />
                    <DataGridTextColumn Header="First Name" Binding="{Binding firstName}" />
                    <DataGridTextColumn Header="Last Name" Binding="{Binding lastName}" />
                    <DataGridTextColumn Header="Group Name" Binding="{Binding groupName}" />
                    <DataGridTextColumn Header="Email" Binding="{Binding email}" />
                    <DataGridTextColumn Header="Gender" Binding="{Binding gender}" />
                    <DataGridTextColumn Header="Date of Birth" Binding="{Binding birthDate}" />
                    <DataGridTextColumn Header="Updated" Visibility="Hidden" Binding="{Binding updated}" />
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="btn_Update">-</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="btn_Delete">X</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock x:Name="total" HorizontalAlignment="Left" Margin="278,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="64,40,0,0" TextWrapping="Wrap" Text="Search Clients" VerticalAlignment="Top"/>
            <TextBox x:Name="search" HorizontalAlignment="Left" Height="23" Margin="41,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="button" HorizontalAlignment="Left" Content="Go" Margin="167,20,0,0" VerticalAlignment="Top" Width="21" Height="20" Click="btn_Search"/>
        </Grid>
    </Border>
</UserControl>
