<UserControl x:Class="HealthReporter.Controls.TestsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthReporter.Controls"
             mc:Ignorable="d" Height="350" Width="640">
    <Border BorderBrush="Black" BorderThickness="2">
        <Grid ShowGridLines="False" Margin="0,0,0,0">
            <TextBlock x:Name="noOfTests" HorizontalAlignment="Left" Margin="337,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.469,-1.188" Width="13"/>
            <TextBlock x:Name="Text0" HorizontalAlignment="Left" Margin="244,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.469,-1.188" Width="93" Text="Number of tests:"/>
            <TextBlock x:Name="ratings" FontWeight="Bold" HorizontalAlignment="Left" Margin="289,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.469,-1.188" Width="48" Text="Ratings"/>
            <Button x:Name="addTestButton" Content="Add new Test" HorizontalAlignment="Left" Margin="538,0,0,0" VerticalAlignment="Top" Width="98" Click="btn_AddNewTest" />
            <Button x:Name="addCategoryButton" Content="Add new Category" HorizontalAlignment="Left" Margin="418,0,0,0" VerticalAlignment="Top" Width="108" Click="btn_AddNewCategory" />
            <RadioButton x:Name="menRadio" GroupName="Gender" Content="Men" Margin="496,84,93,244" Checked="GenderRadio_Checked"/>
            <RadioButton x:Name="womenRadio" GroupName="Gender" Content="Women" Margin="556,84,10,242" IsChecked="True" Checked="GenderRadio_Checked"/>
            <DataGrid x:Name="catsDataGrid" SelectionMode="Single" IsReadOnly="True" GridLinesVisibility="None" HeadersVisibility="Column" AutoGenerateColumns="False" Margin="0,45,532,0" SelectionChanged="catsDataGrid_SelectionChanged" Background="{x:Null}" BorderBrush="{x:Null}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Category" Binding="{Binding name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid x:Name="testsDataGrid" IsReadOnly="True"  HeadersVisibility="Column" AutoGenerateColumns="False" Margin="104,45,363,0" SelectionChanged="testsDataGrid_SelectionChanged" Background="{x:Null}" GridLinesVisibility="None" BorderBrush="{x:Null}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tests" Binding="{Binding name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid x:Name="ratingsDatagrid" IsReadOnly="True"  HeadersVisibility="Column" AutoGenerateColumns="False" Margin="284,142,299,102" Background="{x:Null}" GridLinesVisibility="Horizontal" BorderBrush="{x:Null}">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="RatingColumn" Binding="{Binding normF}" Header="Score" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid x:Name="LabelandDescDatagrid" IsReadOnly="True"  HeadersVisibility="Column" AutoGenerateColumns="False" Margin="337,142,64,102" Background="{x:Null}" GridLinesVisibility="Horizontal" BorderBrush="{x:Null}" RenderTransformOrigin="0.443,0.49">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Meaning" Binding="{Binding name}" Width="*"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding interpretation}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <ItemsControl x:Name="agesControl" Margin="289,121,0,205"  HorizontalAlignment="Left" Width="297">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="5" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton x:Name="AgeRadio" GroupName="AgesGroup" CommandParameter="{Binding}" Margin="0,0,5,5" Checked="AgeRadio_checked">
                            <TextBox x:Name="AgeTextBox" Text="{Binding interval}" IsReadOnly="True"/>
                        </RadioButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock x:Name="Text1" HorizontalAlignment="Left" Margin="289,26,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" RenderTransformOrigin="0.469,-1.188"/>
            <TextBlock x:Name="Text2" HorizontalAlignment="Left" Margin="516,26,0,0" TextWrapping="Wrap" Text="Units" VerticalAlignment="Top" RenderTransformOrigin="-0.48,0.627"/>
            <TextBlock x:Name="Text3" HorizontalAlignment="Left" Margin="575,26,0,0" TextWrapping="Wrap" Text="Decimals" VerticalAlignment="Top" RenderTransformOrigin="0.146,1.25"/>
            <TextBox x:Name="testName" HorizontalAlignment="Left" IsReadOnly="True" Height="23" Margin="289,47,0,0" TextWrapping="Wrap" Text="{Binding name}" VerticalAlignment="Top" Width="209"/>
            <TextBox x:Name="units" HorizontalAlignment="Left" IsReadOnly="True" Height="23" Margin="516,47,0,0" TextWrapping="Wrap" Text="{Binding units}" VerticalAlignment="Top" Width="39" RenderTransformOrigin="0.179,0.522"/>
            <ComboBox x:Name="decimalsSelector" IsEnabled="False" HorizontalAlignment="Left" Margin="575,48,0,0" VerticalAlignment="Top" Width="44"/>
            <TextBox x:Name="TestDescriptionText" HorizontalAlignment="Left" IsReadOnly="True" Height="23" Margin="289,313,0,0" TextWrapping="Wrap" Text="{Binding description}" VerticalAlignment="Top" Width="283"/>
            <RadioButton x:Name="menFormulaRadio" GroupName="FormulaGender" Content="Men" Margin="458,249,131,79" Checked="FormulaRadio_Checked"/>
            <RadioButton x:Name="womenFormulaRadio" GroupName="FormulaGender" Content="Women" IsChecked="True" Margin="510,249,64,79" Checked="FormulaRadio_Checked"/>
            <TextBox x:Name="FormulaText" HorizontalAlignment="Left" IsReadOnly="True" Height="23" Margin="289,267,0,0" TextWrapping="Wrap" Text="{Binding formulaF}" VerticalAlignment="Top" Width="283"/>
            <TextBlock FontWeight="Bold" HorizontalAlignment="Left" Margin="289,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.469,-1.188" Width="48" Height="16"><Run Text="Formula"/><LineBreak/><Run/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="289,297,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.469,-1.188" Width="79" Height="16"><Run Text="Descriptio"/><Run Text="n"/><LineBreak/><Run/></TextBlock>
            <Button x:Name="addNewRating" Content="+" HorizontalAlignment="Left" Margin="596,224,0,0" VerticalAlignment="Top" Width="17" Click="btn_AddNewRating"  Visibility="Hidden" />
            <Button x:Name="removeRating" Content="-" HorizontalAlignment="Left" Margin="613,224,0,0" VerticalAlignment="Top" Width="17"  Click="btn_RemoveRating"  Visibility="Hidden" />
            <TextBlock HorizontalAlignment="Left" Margin="289,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.469,-1.188"><Run Text="Subcategory"/><Run Text=":"/></TextBlock>
            <ComboBox x:Name="categorySelector"  IsEnabled="False" DisplayMemberPath="name" SelectedValuePath="id" HorizontalAlignment="Left" Margin="363,79,0,0" VerticalAlignment="Top" Width="116" Height="21"/>
            <Button x:Name="SaveTest" Content="Save" HorizontalAlignment="Left" Margin="575,326,0,0"  VerticalAlignment="Top" Width="38" RenderTransformOrigin="0.706,8.4" Click="btn_SaveTest" Visibility="Visible" />
            <Button x:Name="Cancel" Content="X" HorizontalAlignment="Left" Margin="613,326,0,0" VerticalAlignment="Top" Width="23" Click="btn_Cancel" />
        </Grid>
    </Border>
</UserControl>
